<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    >

        <ImageView
            android:id="@+id/mImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_constraintTop_toTopOf="parent"
            android:layout_constraintLeft_toLeftOf="parent"
            android:layout_constraintBottom_toBottomOf="parent"
            android:ignore="MissingConstraints"
            ></ImageView>

        <TextView
            android:id="@+id/mTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title"
            android:layout_constraintTop_toTopOf="parent"
            android:layout_constraintLeft_toLeftOf="@+id/mImage"
            android:layout_constraintBottom_toTopOf="@+id/mDescription"
            android:ignore="MissingConstraints"
            >

        </TextView>

        <TextView
            android:id="@+id/mDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Description"
            android:layout_constraintTop_toTopOf="@+id/mTitle"
            android:layout_constraintLeft_toLeftOf="@+id/mImage"
            android:layout_constraintBottom_toBottomOf="parent"
            android:ignore="MissingConstraints"
            ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>